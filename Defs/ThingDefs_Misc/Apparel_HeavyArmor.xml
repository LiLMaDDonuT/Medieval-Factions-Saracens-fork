<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="ArmorSmithableBase" Name="MFS_HeavyArmorBase" Abstract="true">
        <recipeMaker>
            <recipeUsers>
<!--                 <li>ElectricSmithy</li>
                <li>FueledSmithy</li> -->
                <li>DankPyon_Anvil</li>
            </recipeUsers>
            <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>            
            <researchPrerequisite>MFS_SouthernHeavyArmor</researchPrerequisite>
        </recipeMaker>
        <thingCategories>
            <li>Apparel</li> <!-- ApparelArmor -->
        </thingCategories>
        <apparel>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
            <countsAsClothingForNudity>false</countsAsClothingForNudity>
            <developmentalStageFilter>Child, Adult</developmentalStageFilter>
            <canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>           
        </apparel>
        <techLevel>Medieval</techLevel>        
    </ThingDef>

    <!-- Lamellar vest -->

    <ThingDef ParentName="MFS_HeavyArmorBase">
        <defName>MFS_LamellarVest</defName>
        <label>lamellar vest</label>
        <description>The common soldiers of sultan’s “Golden Army” are clad with this armor. Cheap to produce, easy to repair, a lamellar vest is made of large metal plates that wrap around the body and providing cover for vital organs.</description>
        <graphicData>
            <texPath>Apparel/Armor/HeavyArmor/Lamellar_Vest/Lamellar_Vest</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <recipeMaker>
            <skillRequirements>
                <Crafting>6</Crafting>
            </skillRequirements>
        </recipeMaker>
        <costStuffCount>110</costStuffCount> 
        <stuffCategories>
            <li>Metallic</li>
        </stuffCategories>

        <statBases>
            <MaxHitPoints>260</MaxHitPoints> 
            <WorkToMake>27600</WorkToMake>
            <Mass>15</Mass>
            <StuffEffectMultiplierArmor>0.73</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>1</StuffEffectMultiplierInsulation_Cold>
            <EquipDelay>10</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>-0.6</MoveSpeed>
        </equippedStatOffsets>
        <apparel>
            <bodyPartGroups>
                <li>Neck</li>
                <li>Torso</li>
            </bodyPartGroups>
            <wornGraphicPath>Apparel/Armor/HeavyArmor/Lamellar_Vest/Lamellar_Vest</wornGraphicPath>
            <tags>
                <li>MFS_HeavyArmor</li>
            </tags>
            <layers>
                <li>Shell</li>
            </layers>
        </apparel>
        <colorGenerator Class="ColorGenerator_StandardApparel"/>
    </ThingDef>

    <!-- Plated Mail -->


    <ThingDef ParentName="MFS_HeavyArmorBase">
        <defName>MFS_PlatedMail</defName>
        <label>plated mail</label>
        <description>Light southern chainmail armor, when topped with layers of plating around the shoulders, chest, and back, become heavier, but much more protective.</description>
