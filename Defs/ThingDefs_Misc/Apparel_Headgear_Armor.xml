<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="HatMakeableBase" Name="MFS_HeadgearArmorBase" Abstract="true">
        <recipeMaker>
            <!-- <researchPrerequisite>DankPyon_Tailoring</researchPrerequisite> -->
            <techLevel>Medieval</techLevel>
            <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
            <recipeUsers>
                <li>DankPyon_Anvil</li>
            </recipeUsers>        
        </recipeMaker>
        <tradeability>Sellable</tradeability>        
        <thingCategories>
            <li>ApparelArmor</li>
        </thingCategories>
        <apparel>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
            <canBeDesiredForIdeo>true</canBeDesiredForIdeo>
            <developmentalStageFilter>Child, Adult</developmentalStageFilter>            
        </apparel>
    </ThingDef>

    <!-- Conical Helm -->
     
    <ThingDef ParentName="MFS_HeadgearArmorBase">
        <defName>MFS_ConicalHelm</defName>
        <label>conical helm</label>
        <description>A common type of helmet used in the southern city states. Conical in shape, and with a small nasal guard, this helmet is often paired with a helm wrap to give the wearer some shade.</description>
        <graphicData>
            <texPath>Apparel/Headgear/ConicalHelm/ConicalHelm</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <recipeMaker>
            <skillRequirements>
                <Crafting>4</Crafting>
            </skillRequirements>
        </recipeMaker>
        <stuffCategories>
            <li>Metallic</li>
        </stuffCategories>
        <costStuffCount>55</costStuffCount>
        <statBases>
            <MaxHitPoints>130</MaxHitPoints>
            <WorkToMake>10500</WorkToMake>
            <Mass>2.5</Mass>
            <StuffEffectMultiplierArmor>0.45</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
            <!-- <StuffEffectMultiplierInsulation_Heat>0.45</StuffEffectMultiplierInsulation_Heat> -->
            <EquipDelay>3</EquipDelay>
        </statBases>
        <apparel>
            <bodyPartGroups>
                <li>UpperHead</li>
            </bodyPartGroups>
            <wornGraphicPath>Apparel/Headgear/ConicalHelm/ConicalHelm</wornGraphicPath>
            <tags>
                <li>MFS_SoldierHeadgear</li>
            </tags>
            <layers>
                <li>Overhead</li>
            </layers>
        </apparel>
        <colorGenerator Class="ColorGenerator_StandardApparel"/>
    </ThingDef>

