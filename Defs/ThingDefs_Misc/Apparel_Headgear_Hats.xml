    <!-- Headwrap -->

    <ThingDef ParentName="MFS_HeadgearHatBase">
        <defName>MFS_HeadWrap</defName>
        <label>head wrap</label>
        <description>A more protective variant of a simple wrap, a headwrap covers not just the top of the head but also the ears and the neck against the sun. Also keeps the head warm during cold desert nights.</description>
        <graphicData>
            <texPath>Apparel/Headgear/HeadWrap/HeadWrap</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <generateCommonality>0.4</generateCommonality>
        <recipeMaker>
            <researchPrerequisite>MFS_SouthernTailoring</researchPrerequisite>            
        </recipeMaker>            
        <costStuffCount>35</costStuffCount>
        <stuffCategories>
            <li>Fabric</li>
        </stuffCategories>
        <statBases>
            <WorkToMake>3600</WorkToMake>
            <Mass>0.2</Mass>
            <StuffEffectMultiplierArmor>0.25</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.25</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.4</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>2</EquipDelay>
        </statBases>
        <apparel>
            <wornGraphicPath>Apparel/Headgear/HeadWrap/HeadWrap</wornGraphicPath>
            <tags>
                <li>MFS_CivilianHeadgear</li>
            </tags>
            <bodyPartGroups>
                <li>FullHead</li>
            </bodyPartGroups>
            <layers>
                <li>Overhead</li>
            </layers>
        </apparel>
    </ThingDef>    

